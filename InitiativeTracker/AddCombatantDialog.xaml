<Window x:Class="InitiativeTracker.AddCombatantDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Combatant" Height="246" Width="301" ShowInTaskbar="False" ResizeMode="NoResize" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontFamily="Segoe UI">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="146*"/>
    		<ColumnDefinition Width="147*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="25*"/>
    		<RowDefinition Height="25*"/>
    		<RowDefinition Height="25*"/>
    		<RowDefinition Height="25*"/>
    	</Grid.RowDefinitions>
    	<Button Content="Button" Grid.Row="3" Margin="10,5,5,10"/>
    	<Button Content="Button" Grid.Column="1" Grid.Row="3" Margin="5,5,10,10"/>
    	<TextBlock TextWrapping="Wrap" Text="Combatant Name" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
    	<TextBlock TextWrapping="Wrap" Text="Combatant Type" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
    	<TextBlock Grid.Row="2" TextWrapping="Wrap" Text="Dexterity Modifier" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
    	<TextBox x:Name="CombatantName" Grid.Column="1" TextWrapping="Wrap" Text="Combatant Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,10,10,10"/>
        
    </Grid>
</Window>
