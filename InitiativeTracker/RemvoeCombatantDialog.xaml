<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="InitiativeTracker.RemvoeCombatantDialog"
	x:Name="Window"
	Title="Remove Monsters"
	Height="110.136" Width="255" ShowInTaskbar="False" ResizeMode="NoResize">

	    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
			<ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Combat has ended. Remove Monsters?" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
        <Button x:Name="RemoveMonsters" IsDefault="True" Content="Remove Monsters" Grid.Column="0" Grid.Row="1" Margin="10,5,5,10" Click="RemoveMonsters_Click"/>
        <Button x:Name="KeepMonsters" IsCancel="False" Content="Keep Monsters" Grid.Column="1" Grid.Row="1" Margin="5,5,10,10" Click="KeepMonsters_Click"/>

    </Grid>

</Window>