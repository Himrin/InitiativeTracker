<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="InitiativeTracker.MainWindow"
        Title="MainWindow" Height="414.5" Width="513">
	<Grid Margin="0,0,0,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="119*"/>
			<ColumnDefinition Width="143*"/>
			<ColumnDefinition Width="119*"/>
			<ColumnDefinition Width="119*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="369*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Button x:Name="AddCombatant" Content="Add Combatant" Grid.Row="1" Grid.RowSpan="2" Margin="10,5,5,10"/>
		<Button x:Name="NextCombatant" Content="Next Turn" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Margin="5,5,10,10"/>
		<Button x:Name="CloneCombatant" Content="Clone Combatant" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="5,5,5,10"/>
		<Button x:Name="StartCombat" Content="Start Combat" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Margin="5,5,5,10" />
	</Grid>
</Window>
