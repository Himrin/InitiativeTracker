<Window x:Class="InitiativeTracker.RollInitiativeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roll Initiative" Height="99.136" Width="284.593" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="172*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" Text="Roll Initiative for Players, Monsters, or both?" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,5"/>
        <CheckBox x:Name="MonsterInitiative" Content="Monsters" Grid.Row="1" Margin="10,5,10,10" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="True"/>
        <CheckBox x:Name="PlayerInitiative" Content="Players" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
