<Window x:Class="InitiativeTracker.RollInitiativeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roll Initiative" Height="110.136" Width="333" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="111*"/>
			<ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Roll Initiative for Players, Monsters, or both?" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"/>
        <Button x:Name="MonsterRoll" Content="Monsters Only" Grid.Row="1" Margin="10,5,5,10" Click="MonsterRoll_Click"/>
        <Button x:Name="BothRoll" Content="Both" Grid.Column="1" Grid.Row="1" Margin="5,5,5,10" Click="BothRoll_Click"/>
        <Button x:Name="PlayerRoll" Content="Players Only" Grid.Column="2" Grid.Row="1" Margin="5,5,10,10" Click="PlayerRoll_Click"/>

    </Grid>
</Window>
